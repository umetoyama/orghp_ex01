<%= render "shared/second-header" %>

<div class="contact-page">
  <div class="contact-base">
    <div class="contact-title">
      <h3>お問い合わせ</h3>
    </div>
    <div class="contact">
      <%= form_with model:@contact do |f| %>
        <div class="contact-name">
          <%= f.label :お名前 %><br>
          <%= f.text_field :name, class:"area" %>
        </div>
        <div class="email">
          <%= f.label :メールアドレス %><br>
          <%= f.email_field :email, class:"area" %>
        </div>
        <div class="message">
          <%= f.label :お問い合わせ内容 %><br>
          <%= f.text_area :message, class:"area" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>