<%= render "shared/second-header" %>

<% if User.exists? %>
<div class="member__master">
  <div class="member__list">
    <% @profiles.each.with_index(1) do |member, index| %>
      <div class="member__frame">
        <label for="<%= index %>">
        <div class="member__image-content">
          <%= image_tag member.image.variant( resize: "50%"), class: "member__image-picture" if member.image.attached? %>
        </div>
        <div>
          <span class="member__profile-text">
            <p class="member__profile-text-top m-b-s">
              <%= member.position.name %>
            </p>
            <p class="member__profile-text-top">
              <%= member.user.name %>
            </p>
          </span>
          <span class="member__profile-text-works">
            <p>担当作品
            <%= member.works %>
            </p>
          </span>
        </div>
        <input type="checkbox" id="<%= index %>">
        <span class="member__blowing">
          <p><%= member.about_me %></p>
        </span>
        </label>
      </div>
    <% end %>
  </div>
</div>
<% else %>
<%= render "shared/temporary_member_index" %>
<% end %>

<%= render "shared/footer" %>