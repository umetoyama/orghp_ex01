<div class="form-base-master">
  <span class="form-base">
    <h2>Sign up</h2>

    <%= form_for(@user, url: user_registration_path) do |f| %>
      <%= render "devise/shared/error_messages", resource: @user %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "form" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form" %>
      </div><br />

      <div class="actions">
        <%= f.submit "Next", class: "form" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </span>
</div>