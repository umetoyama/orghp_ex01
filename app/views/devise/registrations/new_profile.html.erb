<h2>プロフィール作成</h2>

<%= form_for @profile do |f| %>
  <% render "devise/shared/error_messages", resource: @profile %>

  <div class="field">
    <%= f.label :position %><br />
    <%= f.collection_select(:position_id, Position.all, :id, :name, {}, {}) %>
  </div>

  <div class="filed">
    <%= f.label :about_me %><br />
    <%= f.text_area :about_me %>
  </div>

  <div class="actions">
    <%= f.submit "sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>