<%= render "shared/second-header" %>

<% if Topic.exists? %>
<div class="topic-base">
  <% @topics.each do |topics| %>
  <article class="topics">
    <%= link_to topic_path(topics.id), class:"t-link" do %>
    <div class="topic-top">
      <div class="topic-title">
        <span class="brock">
          <%= topics.title %>
        </span>
        <div class="line"></div>
      </div>
      <div class="name-date">
        <div class="line"></div>
        <span class="name-date-brock">
          <span>
            <%= topics.user.name %>
          </span>
          <span>
            <%= topics.created_at.strftime('%y/%m/%d') %>
          </span>
        </span>
      </div>
    </div>
    <div class="t-content">
      <%= topics.content %>
    </div>
    <% end %>
  </article>  
  <% end %>
</div>
<% end %>

<%= render "shared/footer" %>